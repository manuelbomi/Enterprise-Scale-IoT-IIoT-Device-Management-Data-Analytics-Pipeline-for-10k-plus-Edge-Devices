{
  "Parameters": {
    "SerialNumber": {
      "Type": "String"
    },
    "ThingGroup": {
      "Type": "String"
    }
  },
  "Resources": {
    "thing": {
      "Type": "AWS::IoT::Thing",
      "Properties": {
        "ThingName": {
          "Ref": "SerialNumber"
        },
        "ThingGroups": [
          {
            "Ref": "ThingGroup"
          }
        ]
      }
    },
    "certificate": {
      "Type": "AWS::IoT::Certificate",
      "Properties": {
        "Status": "ACTIVE"
      }
    },
    "policy": {
      "Type": "AWS::IoT::Policy",
      "Properties": {
        "PolicyName": "YourIoTPolicy"
      }
    }
  }
}
